{
  "manifest_version": 3,
  "name": "Website Blocker2",
  "version": "1.0",
  "description": "Blocks specified websites on Chrome using manifest v3.",
  "permissions": [
    "storage",
    "scripting",
    "webNavigation"
  ],
  "host_permissions": ["http://*/*", "https://*/*"],

  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  
  }
}
